<div id="<%= dom_id episode %>">
  <p>
    <strong>Cloth:</strong>
    <%= episode.cloth_id %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= episode.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= episode.content %>
  </p>

  <div>
    <% if episode.image.present? %>
      <div>
        <%= image_tag(episode.image_url, size: "100x100") %>
      </div>
    <% end %>
  </div>
</div>
