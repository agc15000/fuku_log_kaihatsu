<%= form_with(model: cloth, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <% if @cloth.image.present? %>
      <div>
        <%= image_tag(cloth.image_url, size: "100x100") %>
      </div>
    <% end %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :tag_list %>
    <%= form.text_field :tag_list, value: cloth.tag_list.join(','),  class: 'form-control' %>
  </div>
  
  <%= form.submit class: 'btn btn-primary' %>
<% end %>