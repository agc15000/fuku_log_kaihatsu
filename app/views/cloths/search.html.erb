<h1>Cloth#search</h1>

<% if @cloths.present? %>
  <h2>Search Results:</h2>
  <ul>
    <% @cloths.each do |cloth| %>
      <li>
        <%= link_to cloth.name, cloth_path(cloth) %>
        <%= cloth.description %>
      </li>
      <% if cloth.image_url.present? %>
        <p><%= image_tag(cloth.image_url, size: "100x100") %></p>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p>No cloth found</p>
<% end %>